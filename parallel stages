        pipeline {
          agent any
          stage('TEST') {
            steps {
                sh '''
                    sleep 6
                    echo "This is a TEST stage $BRANCH_NAME"
                '''
            parallel {

                stage('TEST ON LINUX MACHINE') {
                    steps {
                        sh '''
                            sleep 6
                            echo "This is a TEST on LINUX"
                        '''
                    }
                }

                stage('TEST ON WINDOWS MACHINE') {
                    steps {
                        sh '''
                            sleep 6
                            echo "This is a TEST on WINDOWS"
                        '''
                    }
                }

            }
        }
